{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server.js" },
    { "src": "/(css|js|images|assets|vendor)/(.*)", "dest": "/public/$1/$2" },
    { "src": "/game", "dest": "server.js" },
    { "src": "/", "dest": "server.js" },
    { "src": "/(.*)", "dest": "server.js" }
  ],
  "functions": {
    "server.js": {
      "includeFiles": "public/**"
    }
  }
}